@{
    ViewBag.Title = "Cliente listar";
}
<div class="container  w-75">

    <div class="row p-2">
        <div class="col-md-9">
                <div class="row">
                    <div class="col-md-3">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" class="form-control form-control-md form-control-solid" />
                </div>
                    <div class="col-md-3">
                    <label for="sexo">Sexo</label>
                    <select name="sexo" id="sexo" class="form-select">
                        <option value="">Todos</option>
                        <option value="m">Masculino</option>
                        <option value="f">Feminino</option>
                    </select>
                </div>
                    <div class="col-md-3">
                    <label for="estado_civil">Estado Civil</label>
                    <select name="estado_civil" id="estado_civil" class="form-select">
                        <option value="">Todos</option>
                        <option value="s">Solteiro</option>
                        <option value="c">Casado</option>
                        <option value="v">Viuvo</option>
                    </select>
                </div>
                    <div class="col-md-3">
                    <label for="cpf">CPF</label>
                    <input type="text" id="cpf" class="form-control form-control-md form-control-solid cpf" />
                </div>
                </div>
            </div>
        <div class="col-md-3 d-flex justify-content-center">
            <button class="btn btn-success w-100 m-2" id="filtrar">Filtrar</button>
            <button class="btn btn-warning w-100 m-2" id="resetar">Resetar</button>
        </div>

        </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>RG</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody id="datatable">
      
        </tbody>
    </table>
</div>

<script type="text/template" id="template_table">

    <tr>
        <th class="table-id"></th>
        <td class="table-nome"></td>
        <td class="table-cpf"></td>
        <td class="table-rg"></td>
        <td class="text-end"><a href="" class="btn btn-primary btn-editar">Editar</a> <a href="" class="btn btn-danger btn-deletar">Deletar</a></td>
    </tr>
</script>

<script src="~/Content/Cliente/Scripts/listar.js" defer></script>
