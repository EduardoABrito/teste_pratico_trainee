
@{
    ViewBag.Title = "Editar Cliente";
}

<div class="px-4">
    <h2 class="text-center m-3 fw-bold">Edição do Cliente -  @Model.Nome</h2>
    <hr class="dashed">
        <div class="row">
            <div class="col-md-5">
                <form id="cliente_editar">
                    <h5>Dados Do Cliente</h5>
                    <input type="hidden" id="id" value=" @Model.Id" required />

                    <div class="w-100">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome" class="form-control form-control-md form-control-solid" placeholder="Nome" value=" @Model.Nome" required />
                    </div>
                    <div class="w-100">
                        <label for="sexo">Sexo</label>
                        <select name="sexo" id="sexo" class="form-select">
                            <option value="M" @(Model.Sexo.ToUpper() == "M" ? "selected" : string.Empty)>Masculino</option>
                            <option value="F" @(Model.Sexo.ToUpper() == "F" ? "selected" : string.Empty)>Feminino</option>
                        </select>
                    </div>
                    <div class="w-100">
                        <label for="dt_nascimento">Data Nascimento</label>
                        <input type="text" id="dt_nascimento" name="dt_nascimento" class="form-control form-control-md form-control-solid datePicker" placeholder="Data Nascimento" value="@Model.DataNascimento" required />
                    </div>
                    <div class="w-100">
                        <label for="estado_civil">Estado Civil</label>
                        <select name="estado_civil" id="estado_civil" class="form-select">
                            <option value="S" @(Model.EstadoCivil.ToUpper() == "S" ? "selected" : string.Empty)>Solteiro</option>
                            <option value="C" @(Model.EstadoCivil.ToUpper() == "C" ? "selected" : string.Empty)>Casado</option>
                            <option value="V" @(Model.EstadoCivil.ToUpper() == "V" ? "selected" : string.Empty)>Viuvo</option>
                        </select>
                    </div>
                    <div class="w-100">
                        <label for="cpf">CPF</label>
                        <input type="text" id="cpf" name="cpf" class="form-control form-control-md form-control-solid cpf" placeholder="CPF" value="@Model.CPF" required />
                    </div>
                    <div class="w-100">
                        <label for="rg">RG</label>
                        <input type="text" id="rg" name="rg" class="form-control form-control-md form-control-solid rg" placeholder="Rg" value="@Model.RG" required />
                    </div>
                    <div class="py-3">
                        <button type="submit" class="btn btn-success m-1">Atualizar</button>
                        <a href="@Url.Action("Index","Home")" class="btn btn-danger m-1">Voltar</a>
                    </div>
                </form>
            </div>
            <div class="col-md-7">
                <div class="text-end">
                    <a href="#" class="btn btn-warning m-1" id="cadastrar_endereco">Cadastrar Endereço</a>
                </div>
                <div class="endereco-table">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Logradouro</th>
                                <th>Numero</th>
                                <th>Bairro</th>
                                <th>Complemento</th>
                                <th>Cidade</th>
                                <th>UF</th>
                                <th>CEP</th>
                                <th class="text-end">Ações</th>
                            </tr>
                        </thead>
                        <tbody class="overflow-auto h-50" id="datatable">
                        </tbody>
                    </table>
                </div>
                <div class="endereco" style="display:none">
                    <h5>Endereço Do Cliente</h5>
                    <form id="form_endereco">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="hidden" id="id_endereco" required />

                                <div>
                                    <label for="cep">CEP</label>
                                    <input type="text" id="cep" name="cep" class="form-control form-control-md form-control-solid cep" placeholder="CEP" Required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label for="tipo_id">Tipo</label>
                                    <select name="tipo_id" id="tipo_id" class="form-select" Required>
                                        <option value="1">Residencial</option>
                                        <option value="2">Comercial</option>
                                        <option value="3">Outros</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div>
                                    <label for="logradouro">Logradouro</label>
                                    <input type="text" id="logradouro" name="logradouro" class="form-control form-control-md form-control-solid" placeholder="Logradouro" Required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div>
                                    <label for="numero">Número</label>
                                    <input type="number" id="numero" name="numero" class="form-control form-control-md form-control-solid" placeholder="Número" Required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div>
                                    <label for="bairro">Bairro</label>
                                    <input type="text" id="bairro" name="bairro" class="form-control form-control-md form-control-solid" placeholder="Bairro" Required />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div>
                                    <label for="cidade">Cidade</label>
                                    <input type="text" id="cidade" name="cidade" class="form-control form-control-md form-control-solid" placeholder="Cidade" Required />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div>
                                    <label for="uf">UF</label>
                                    <input type="text" id="uf" name="uf" class="form-control form-control-md form-control-solid" placeholder="UF" maxlength="2" Required />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div>
                                    <label for="complemento">Complemento</label>
                                    <input type="text" id="complemento" name="complemento" class="form-control form-control-md form-control-solid" placeholder="Casa Apto etc" Required />
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success m-1">Salvar</button>
                            <a href="#" class="btn btn-danger m-1" id="voltar">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
<script type="text/template" id="template_Enderecos">

    <tr>
        <th class="table-id"></th>
        <td class="table-logradouro"></td>
        <td class="table-numero"></td>
        <td class="table-bairro"></td>
        <td class="table-complemento"></td>
        <td class="table-cidade"></td>
        <td class="table-uf"></td>
        <td class="table-cep cep"></td>
        <td class="text-end"><button class="btn btn-primary btn-editar">Editar</button> <button class="btn btn-danger btn-deletar">Deletar</button></td>
    </tr>
</script>
<script src="~/Content/Cliente/Scripts/Editar.js" defer></script>